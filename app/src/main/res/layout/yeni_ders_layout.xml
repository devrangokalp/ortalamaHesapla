            android:popupBackground="@color/colorAccent"
            app:layout_constraintStart_toEndOf="@+id/spnYeniDersKredisi"
            android:layout_marginStart="8dp" android:entries="@array/TÃ¼mNotlar" android:layout_marginTop="12dp"
